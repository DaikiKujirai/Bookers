<!DOCTYPE html>
<html>
  <body>
    <p><%= flash[:destroy] %></p>
    <h1>Books</h1>
    <table
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h1>New Book</h1>
    <%= render partial: 'error_form' %>
    <%= form_with model:@book, url:"/books", local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <p><%= button_to "Create Book", {controller: 'books', action: 'index'}, {method: :get} %></p>
    <% end %>
  </body>
</html>