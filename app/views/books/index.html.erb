  <!DOCTYPE html>
  <html>
    <body>
        <p id="notice"></p>
        <h1>Books</h1>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
        <% @books.each do |book| %>
        <p><%= book.title %></p>
        <p><%= book.body %></p>
        <dev class="action">
          <p><%= link_to "Show", book_path(book.id) %></p>
          <p><%= link_to "Edit", edit_book_path(book.id) %></p>
          <p><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></p>
        </dev>
        <% end %>

    </body>


    <h1>New Book</h1>
    <%= form_with model:@book, url:"/books", local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Update Book' %>
    <% end %>
  </html>