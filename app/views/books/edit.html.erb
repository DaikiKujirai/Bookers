<%= render partial: 'error_form' %>
<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit "Update Book" %></p>

  <th><%= link_to "show", book_path(@book.id) %></th> |
  <th><a class="back" href="/books">Back</a></th>
<% end %>